export default function handler(req, res) {
  const { moduleId } = req.query
  
  if (!moduleId || !quizQuestions[moduleId]) {
    return res.status(404).json({ error: 'Questions not found' })
  }
  
  res.status(200).json(quizQuestions[moduleId])
}

